/**index.wxss**/
.userInfo{
  background-color: #3cc51f;
  padding: 10rpx;
  width: 100%;
}
.avatar-view{
  display: inline-block;
  width: 200rpx;
}
.name-view{
  display: inline-block;
  width: 500rpx;
  text-align: left;
}
.name-view-con{
  position: relative;
  top: -64rpx;
  /* height: 128rpx; */
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 10rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  width: 600rpx;
  color: #fff;
  font-size: 16px;
  margin-right: 10rpx;
}
.userinfo-vipinfo {
  background-color: rgba(0, 0, 0, 0.3);
  padding:5rpx 10rpx;
  font-size: 10px;
  border-radius: 5rpx;
  color: #fff;
}
.wrapper {
  text-align: center;
  height: 100%;
}
.background-img{
  width: 100%;
  height: 350rpx;
}
.menu-contain{
  width: 25%;
  display: inline-block;
}
.menu-font{
  font-size: 10px;
  display: block;
}
.menu-icon{
  width: 20px;
  height: 20px;
  background-color: #41695e;
  padding: 5px;
  border-radius: 100%;
}
.split{
  height: 5px;
  background: #eeeeee;
}
.gift-contain{
  padding: 10px;
  text-align: left;
}
.gift-small-text{
  margin-top: 5px;
  font-size: 10px;
  color: #696969;
}
.gift-img{
  margin: 10px 0 ;
  width: 100%;
  height: 120px;
}
.advertisement{
  padding: 25px 0;
}
.advertisement image{
  width: 100%;
}
/**index.wxss**/

.userInfo {
  /* background-color: #88b58a; */
  width: 100%;
  height: 188rpx;
}

.card-background {
  width: 100%;
  height: 188rpx;
  position: absolute;
}

.userinfo-view {
  width: 100%;
  display: inline-flex;
  height: 148rpx;
}

.avatar-view {
  /* display: inline-block; */
  width: 200rpx;
}

.name-view {
  width: 100%;
  /* display: inline-block; */
  text-align: left;
  font-weight: bold;
}

.name-view-con {
  position: relative;
  height: 128rpx;
  line-height: 128rpx;
}

.card-title {
  margin-left: 30rpx; 
  display: block;
  position: relative;
  color: #fff;
  text-align: left;
  font-size: 10px;
}

.userinfo-avatar {
  width: 88rpx;
  height: 88rpx;
  margin: 20rpx;
  border-radius: 50%;
  border: 2px solid #eee;
  position: relative;
}

.userinfo-nickname {
  width: 600rpx;
  color: #fff;
  font-size: 14px;
  margin-right: 10rpx;
}

.userinfo-vipinfo {
  background-color: rgba(0, 0, 0, 0.3);
  padding: 5rpx 10rpx;
  font-size: 10px;
  border-radius: 5rpx;
  color: #fff;
}

.wrapper {
  text-align: center;
  height: 100%;
}

.background-img {
  width: 100%;
  height: 350rpx;
}

.menu-contain {
  width: 25%;
  display: inline-block;
}

.menu-font {
  font-size: 10px;
  display: block;
}

.menu-icon {
  width: 20px;
  height: 20px;
  background-color: #41695e;
  padding: 5px;
  border-radius: 100%;
}

.split {
  height: 5px;
  background: #eee;
}

.gift-contain {
  padding: 10px;
  text-align: left;
}

.gift-small-text {
  margin-top: 5px;
  font-size: 10px;
  color: #696969;
}

.gift-img {
  margin: 10px 0;
  width: 100%;
  height: 120px;
}

.advertisement {
  padding: 25px 0;
}

.advertisement image {
  width: 100%;
}

@import '/miniprogram_npm/weui-miniprogram/weui-wxss/dist/style/weui.wxss';

.scrollview-contain {
  display: flex;
}

.left {
  flex: 1;
}

.left-tab {
  padding: 15px 10px;
  text-align: center;
  font-size: 12px;
  background: #f6f6f6;
  overflow-y: auto;
  border-bottom: #d8d8d8 1px solid;
}

.left-tab.active {
  background: #fff;
  border-left: #41695e 8rpx solid;
}

.right {
  flex: 3;
  padding: 20rpx;
}

.back-img {
  width: 100%;
  height: 150px;
}

.search-self {
  background-color: #fff;
}
.group-title{
  font-size: 14px; 
  padding: 10px 10px 0 10px;
  height: 30px;
}
.good {
  padding: 10px 10px;
  height: 80px;
}

.good-img {
  width: 100rpx;
  height: 100rpx;
  float: left;
  padding: 5px;
}

.good-title {
  font-size: 14px;
  width: 350rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.good-desc {
  font-size: 10px;
  color: #c9c9c9;
  width: 350rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.plus {
  background-color: #41695e;
  color: #fff;
  float: right;
  display: block;
  width: 22px;
  height: 22px;
  line-height: 20px;
  text-align: center;
  border-radius: 50px;
  font-size: 20px;
}
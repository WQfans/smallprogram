@import '/miniprogram_npm/weui-miniprogram/weui-wxss/dist/style/weui.wxss';

.scrollview-contain {
  display: flex;
}

.left {
  flex: 1;
}

.left-tab {
  padding: 15px 10px;
  text-align: center;
  font-size: 12px;
  background: #f6f6f6;
  overflow-y: auto;
  border-bottom: #d8d8d8 1px solid;
}

.left-tab.active {
  background: #fff;
  border-left: #41695e 8rpx solid;
}

.right {
  flex: 3;
  padding: 20rpx;
}

.back-img {
  width: 100%;
  height: 150px;
}

.search-self {
  background-color: #fff;
}

.group-title {
  font-size: 14px;
  padding: 10px 10px 0 10px;
  height: 30px;
}

.good {
  padding: 10px 10px;
  height: 80px;
}

.good-img {
  width: 100rpx;
  height: 100rpx;
  float: left;
  padding: 5px;
}

.good-title {
  font-size: 14px;
  width: 350rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.good-desc {
  font-size: 10px;
  color: #c9c9c9;
  width: 350rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.productCount {
  float: right;
  font-size: 14px;
  width: 20px;
  height: 20px;
  text-align: center;
  line-height: 20px;
}

.minus {
  color: #c9c9c9;
  border: 1px solid #d8d8d8;
}

.plus {
  background-color: #41695e;
  color: #fff;
  border: 1px solid #41695e;
}

.cricle {
  float: right;
  display: block;
  width: 20px;
  height: 20px;
  line-height: 20px;
  text-align: center;
  border-radius: 50px;
  font-size: 18px;
}

.shopCart {
  position: fixed;
  width: 100%;
  background: #f6f6f6;
  height: 50px;
  bottom: 0;
  text-align: right;
    z-index: 3;
}

.shop-cart {
  position: absolute;
  top: -3px;
  margin-left: 20px;
  width: 50px;
  height: 50px;
  background: #fff;
  color: #41695e;
  text-align: center;
  font-size: 8px;
  border-radius: 50px;
  z-index: 3;
}

.shop-cart-icon {
  width: 25px;
  height: 25px;
  vertical-align: middle;
}

.shop-count {
  position: relative;
  z-index: 3;
  left: 55px;
  color: #fff;
  width: 15px;
  height: 15px;
  font-size: 10px;
  text-align: center;
  vertical-align: middle;
  border-radius: 50px;
  background: #41695e;
}

.total-money {
  display: inline-block;
  font-size: 14px;
}

.submit {
  width: 50px;
  font-size: 14px;
  text-align: center;
  border-radius: 10px;
  padding: 2px 5px;
  height: 20px;
  background: #41695e;
  color: #fff;
  display: inline-block;
  margin: 0 10px;
}

.shop-cart-info {
  position: fixed;
  width: 100%;
  background: #fff;
  bottom: 50px;
  z-index: 3
}

.cart-detail-info {
  font-size: 14px;
  padding: 10px 20px 0px 20px;

  /* padding-right: 30px; */
}
.remove-all{
  font-size: 12px;
  right: 0px;
  background: #f6f6f6;
  color: #c9c9c9;
  text-align: right;
  padding: 2px 10px 2px 20px;
}
.detail-contain{
  border-bottom: 1px solid #d8d8d8;
  padding-bottom: 10px;
}
.cart-detail-title{
  vertical-align: middle;
  display: inline-block;
  width: 350rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.cart-detail-price{
  vertical-align: middle;
  margin-left: 20px;
  display: inline-block;
}

.hide-contain{
  background: rgba(0, 0, 0, 0.3);
  position: fixed;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 2;
}